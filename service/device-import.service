[Unit]
Description=Device Import Service
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/python3 /opt/Device-Import/service.py
ExecStop=/bin/bash /opt/Device-Import/service/stop.sh
WorkingDirectory=/opt/Device-Import
Restart=always
RestartSec=5
TimeoutSec=60
RuntimeMaxSec=infinity
PIDFile=/tmp/device-import.pid

[Install]
WantedBy=multi-user.target